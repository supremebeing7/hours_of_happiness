<!DOCTYPE html>
<html>
<head>
  <title>HoursOfHappiness</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <%= link_to "Hours of Happiness", root_url,
          :class => "navbar-text navbar-left" %>
      <% if user_signed_in? %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete,
            :class => "navbar-text navbar-right" %>
        <%= link_to "Logged in as #{current_user.name}", edit_user_registration_path,
            :class => "navbar-text navbar-right" %>
      <% else %>
        <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2), :class => "navbar-text navbar-right" %>
        <%= link_to "Sign in", new_user_session_path,
            :class => "navbar-text navbar-right" %>
        <%= link_to "Sign up", new_user_registration_path,
            :class => "navbar-text navbar-right" %>
      <% end %>
    </div>
  </div>

  <div class="container">
    <%= flash[:notice] %>
    <%= flash[:alert] %>
    <%= yield %>
  </div>
</body>
</html>
