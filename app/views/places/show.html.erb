<h1><%= @place.name %></h1><%= link_to "Edit Place", edit_place_path(@place), class: "btn btn-primary btn-sm" %><br><br>

<div class="row">
  <div class="col-sm-6">
    <p>
      Address: <br>
      <%= @place.address %><br>
    </p>
    <p>
      Description: <br>
      <%= @place.description %><br>
    </p>
    <p>
      Happy Hour Description: <br>
      <%= @place.hh_description %><br>
    </p>
  </div>
  <div class="col-sm-6">
    <iframe
      width="600"
      height="450"
      frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAzW0SvELhV_eiTPvfxBtHrGd5oBozh2Uc
        &q=<%= @name %>">
    </iframe>
  </div>
</div>
