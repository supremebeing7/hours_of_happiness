<%= render 'layouts/errors', object: @rating %>

<%= form_for @rating, :html => { :multipart => true } do |f| %>
  <div class='form-group'>
    <%= f.label "Stars" %><br>
    <%= f.number_field :score %>
  </div>
  <div class="form-group">
    <%= f.text_area :review, :placeholder => 'What did you like/dislike?', rows: 8, cols: 50 %>
  </div>
  <%= f.hidden_field :place_id, value: @place.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
